@model Model.ViewModels.RegisterViewModel
@{ 
    ViewBag.title = "User registeration";
        Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h2>Register user</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    @Html.AntiForgeryToken()

                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                @Html.ValidationSummary("", new { @class = "alert alert-warning alert-dismissible fade show" })
                            }
                        </div>

                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group col-md-3 required">
                        @Html.LabelFor(m => m.Email, new { @class = " control-label" })

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "field-validation-error " })

                    </div>

                    <div class="form-group col-md-3 required">
                        @Html.LabelFor(m => m.Password, new { @class = " control-label" })

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "field-validation-error " })

                    </div>
                    <div class="form-group col-md-3 required">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })


                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "Password is not the same!", new { @class = "field-validation-error " })



                    </div>
                   
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

